<div class="columns is-centered">
  <div class="column is-half is-narrow">
    <img src=<%= author.authorPic %> alt=>
  </div>
</div>

<hr/>


<div class="columns">
  <div class="column is-one-half">
    <h1 class="title is-1"><%= author.author %></h1>
    <p>Nationality: <%=author.nationality%>

      <p>Genres: <% author.genres.forEach(genre => { %>
        <span class="tag"><%= genre %></span>
        <% }) %>
      </p>

      <%- include('../comments/index', { author }) %>

      <% if (locals.isLoggedIn) { %>
        <hr/>
        <div class="section">
          <div class="level">
            <div class="level-left">
              <a class="button is-warning" href="/authors/<%= author.id %>/edit">Edit</a>
            </div>
            <div class="level-right">
              <form class="" action="/athors/<%= author.id %>" method="POST">
                <button class="button is-warning">DELETE</button>
                <input type="hidden" name="_method" value="DELETE">
              </form>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <div class="column is-one-half">
        <h1 class="title">Audiobook Available</h1>
        <% author.audiobooks.forEach((audiobook, i) => { %>
          <div class="block">
            <div class="columns">
              <div class="column is-1">
                <%= i + 1 %>.
              </div>
              <div class="column is-11">
                <p><%= audiobook %></p>
              </div>
            </div>
          </div>
          <%})%>
        </div>
