<% audiobook.comments.forEach(comment => { %>
<div class="columns">
  <div class="column is-11">
    <p>
      <span class="commenter">
      <%= comment.name %>:
      </span>
      <%= comment.content %>
      </p>
  </div>
  <div class"column is-1">
    <% if (locals.isLoggedIn && locals.user.name === comment.name){ %>
    <form action="/audiobooks/<%= audiobook.id %>/comments/<%= comment.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <button class="tag is-delete">x</button>
    </form>
  <% } %>
  </div>
</div>
<% }) %>

<%if (locals.isLoggedIn) {%>
  <%- include('new', { audiobook }) %>
<% } %>
